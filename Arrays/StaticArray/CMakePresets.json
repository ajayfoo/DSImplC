{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux-debug",
      "displayName": "Debug Config for Linux",
      "description": "Debug build using Ninja generator for Linux",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_C_FLAGS_INIT": "-Wall -Wextra -pedantic -Werror",
        "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -pedantic -Werror"
      }
    },
    {
      "name": "windows-debug",
      "displayName": "Debug Config for Windows",
      "description": "Debug build using Ninja generator for Windows",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_C_FLAGS_INIT": "/W4 /WX"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Release Config for Linux",
      "description": "Release build using Ninja generator for Linux",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_C_FLAGS_INIT": "-Wall -Wextra -pedantic -Werror"
      }
    },
    {
      "name": "windows-release",
      "displayName": "Release Config for Windows",
      "description": "Release build using Ninja generator for Windows",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_C_FLAGS_INIT": "/W4 /WX"
      }
    }
  ]
}